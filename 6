using System;

namespace _6
{
    //Solicitar un número al usuario y un carácter. Crear una pirámide con N filas y el carácter solicitado.
    //Por ejemplo, si el usuario introduce 5 y * el resultado por consola debería ser:
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Introduce un número.");
            int n = int.Parse(Console.ReadLine());

            Console.WriteLine("Introduce un caracter");
            string c = Console.ReadLine();

            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j <= i; j++)
                {
                    Console.Write(c);
                }
                Console.WriteLine();
            }
        }
    }
}
